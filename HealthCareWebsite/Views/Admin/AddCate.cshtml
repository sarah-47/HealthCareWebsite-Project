@model CategoriesModel
@{
    //ViewData["Title"] = "AddCate";

    ViewBag.Title = Model != null ? "UpdateCate" : "AddCate";
}

<h1>@ViewBag.Title</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="@ViewBag.Title">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input hidden="hidden" asp-for="CId" />
            <div class="form-group">
                <label asp-for="CName" class="control-label">New Category Name:</label>
                <input asp-for="CName" class="form-control" />
                <span asp-validation-for="CName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>