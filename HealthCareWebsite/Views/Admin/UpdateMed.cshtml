@model MedicinesModel
@{
    ViewData["Title"] = "Update Medicine";
}

<h1>Update Medicine</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data" asp-action="UpdateMed">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input hidden="hidden" asp-for="MId" />
            <div class="form-group">
                <label asp-for="MName" class="control-label">Medicine Name:</label>
                <input asp-for="MName" class="form-control" />
                <span asp-validation-for="MName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MPrice" class="control-label">Medicine Price:</label>
                <input asp-for="MPrice" class="form-control" />
                <span asp-validation-for="MPrice" class="text-danger"></span>
            </div>

            <div class="form-group">

                <div class="form-group">
                    <label asp-for="CategoryId" class="control-label">Category:</label>
                    <select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(ViewBag.Categories,"CId","CName"))">

                    </select>

                    <input type="hidden" asp-for="@Model.CategoryId" />
                </div>
            </div>

            <div class="form-group form-check">
                <input class="form-check-input" asp-for="IsAvailable" />
                <label class="form-check-label">Available</label>

            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<Script>
        $(document).ready(function () {
            $("#i1").on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next("#l1").html(fileName);
            });
        });
</Script>
